<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd"
	default-lazy-init="true" default-autowire="byName">

	<bean id="defaultProducerFactory" class="qing.yun.hui.rocketmq.producer.DefaultProducer" init-method="init" destroy-method="destroy">
		<constructor-arg name="namesrvAddr" value="${rocketmq.namesrvAddr}" />
		<constructor-arg name="producerGroup" value="${rocketmq.producerGroup}" />
		<constructor-arg name="instanceName" value="${rocketmq.instanceName}" />
	</bean>
	
	<bean id="sendInfoMessage" class="cn.com.rocketmq.producer.message.SendInfoMessage">
		<constructor-arg index="0" value="consumer" />
		<constructor-arg index="1" value="producer" />
	</bean>
	
</beans>